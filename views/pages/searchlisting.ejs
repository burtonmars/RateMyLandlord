<!DOCTYPE HTML>
<html>

<head>
  <meta charset="utf-8">
  <%- include ('../partials/styling.ejs') %>
  <title><%= title %></title>
</head>

<body>
  <%- include ('../partials/top-nav.ejs') %>

  <div class="apartment-bg-image-searchListing">

    <div id="search-listings-body">
      <h1>Search rental listings in your area</h1>
      <div class="whole-container">

        <div class="right-container">
          <p>Number of Bedrooms</p>
          <p>Number of Bathrooms</p>
          <p>Minimum Price</p>
          <p>Maximum Price</p>
        </div>

        <div class="left-container">
          <form action="/listingSearchBody" method="get">
            <input type="number" placeholder="bedrooms" name="bedrooms" id="bedrooms" required>
            <input type="number" placeholder="bathrooms" name="bathrooms" id="bathrooms" required>
            <input type="number" placeholder="Minimum Price" name="minPrice" id="min-price" required>
            <input type="number" placeholder="Maximum Price" name="maxPrice" id="max-price" required>
            <button type="submit" id="search-listing-btn" class="listing-sub-btn" value="submit">Search</button>
          </form>
        </div>

      </div>
      <form action="/filterbyAreaAvgPrice" method="submit">
        <button type="submit" class="button" id="avgListingPriceBtn"><a href="/priceByArea">Price by Area</button>
      </form>
    </div>

  </div>

  <%- include ('../partials/footer.ejs') %>
</body>