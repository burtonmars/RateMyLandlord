          <div class="label-input"><label for="ftp-password">Password</label>
            <input type="password" placeholder="Enter Password" name="password" required></div>
          <button type="submit" class="log-in-btn">Log In</button>
        </form>
      </div>
    </div>

  </div>


  <%- include ('../partials/footer.ejs') %>
