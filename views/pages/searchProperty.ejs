<!DOCTYPE HTML>
<html>

<head>
  <meta charset="utf-8">
  <%- include ('../partials/styling.ejs') %>
</head>

<body>
  <!-- example of how to include header -->
  <%- include ('../partials/top-nav.ejs') %>

  <div id="search-body">
    <h2>Find a Property</h2>
    <div id="search-by"> search by:
      <div id="search-btns">
        <a class="waves-effect waves-light btn-small" id="landlord" href="/search"><i class="material-icons">person</i><span>landlord</span></a>
        <a class="waves-effect waves-light btn-small" id="property" href="/searchProperty"><i class="material-icons">home</i><span>property</span></a>
      </div>
    </div>
    <div id="search-txt">
      I'm looking for a property:
    </div>
    <div class="search-bar">
      <form action="/searchProperty" method="GET">
        <label for="property"></label>
        <input type="text" placeholder="property address" name="property" id="property"/>
        <button class="btn waves-effect waves-light btn-small" type="submit" name="action">
          <i class="material-icons right">send</i>
        </button>
      </form>
      
    </div>
    <br>

    <% if(category.length > 0){ %>
      <table class="highlight striped centered">
        <thead>
          <tr>
              <th>Address</th>
              <th>City</th>
              <th>Property Type</th>
              <th>Bedrooms</th>
              <th>Bathrooms</th>
          </tr>
        </thead>

        <tbody>
          <% for (var i = 0; i < category.length; i++) { %>
          <tr>
            <td><%= category[i].propertyStreetAddress %></td>
            <td><%= category[i].propertyCity %></td>
            <td><%= category[i].propertyType %></td>
            <td><%= category[i].Bedrooms %></td>
            <td><%= category[i].Bathrooms %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
      
    <% } %>
  </div>



  <!-- example of how to include footer -->
  <div class="footer-wrapper">
    <%- include ('../partials/footer.ejs') %>
  </div>
  
</body>
<script type="text/javascript">

</script>